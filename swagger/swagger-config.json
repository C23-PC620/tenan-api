{
  "openapi": "3.0.3",
  "info": {
    "title": "MapBan RESTful API",
    "description": "OpenAPI for MapBan RESTful API",
    "version": "1",
    "contact": {
      "name": "Muhammad Ferdiansyah",
      "email": "ferdimuh1405@gmail.com"
    },
    "license": {
      "name": "APACHE 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "servers": [
    {
      "url": "https://{environment}.mapban.io/api/v1",
      "description": "MapBan Restful API Server",
      "variables": {
        "environment" : {
          "description": "Server Environment",
          "default": "dev",
          "enum": [
            "dev",
            "prod"
          ]
        }
      }
    }
  ],
  "paths": {
    "/login" : {
      "post" : {
        "summary": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json" : {
              "schema" : {
                "type": "object",
                "required": [
                  "username",
                  "password"
                ],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1
                  },
                  "password" : {
                    "type": "string",
                    "format": "password",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/register" : {
      "post": {
        "summary": "Create new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json" : {
              "examples": {
                "example": {
                  "value": {
                    "username": "string",
                    "password": "string123",
                    "email": "user@example.com"
                  }
                }
              },
              "schema": {
                "type": "object",
                "required": [
                  "username",
                  "password",
                  "email"
                ],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1
                  },
                  "password" : {
                    "type": "string",
                    "format": "password",
                    "description": "Password must have number",
                    "minLength": 8
                  },
                  "email" : {
                    "type": "string",
                    "format": "email",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {

          }
        }
      }
    },
    "/user/{username}" : {
      "get" : {
        "summary": "Get user details",
        "responses": {

        },
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "description": "username of user",
            "schema" : {
              "type": "string"
            }
          }
        ]
      }
    }
  }
}